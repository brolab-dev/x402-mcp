# Private key for signing x402 payment authorizations (EIP-3009)
PRIVATE_KEY=your_private_key_here

# Network: cronos-testnet or cronos-mainnet
NETWORK=cronos-testnet

# Recipient wallet for settlements (payTo address)
SETTLEMENT_RECIPIENT=0x...

# Optional: Custom RPC URL (defaults to network-specific URLs)
# RPC_URL=https://evm-t3.cronos.org

# Settlement amount in USDC.e base units (6 decimals, e.g., 1000000 = 1 USDC.e)
SETTLEMENT_AMOUNT=1000000

# Policy settings
VOLATILITY_THRESHOLD=5
PRICE_CHANGE_THRESHOLD=3
POLLING_INTERVAL_MS=30000

